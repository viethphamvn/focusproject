<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DailyRoutinesListFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/date_picker_actions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent="0.08">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="MON"
            android:fontFamily="@font/nunito"
            app:layout_constraintWidth_percent="0.14"
            android:layout_marginLeft="4dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@color/darkgrey"
            android:gravity="center_horizontal|center_vertical"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/mon"
            android:text="TUE"
            android:fontFamily="@font/nunito"
            app:layout_constraintWidth_percent="0.14"
            android:textColor="@color/white"
            android:background="@color/darkgrey"
            android:textSize="15sp"
            android:gravity="center_horizontal|center_vertical"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/wed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tue"
            android:text="WED"
            app:layout_constraintWidth_percent="0.14"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito"
            android:background="@color/darkgrey"
            android:textSize="15sp"
            android:gravity="center_horizontal|center_vertical"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/thu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/wed"
            android:text="THU"
            app:layout_constraintWidth_percent="0.14"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito"
            android:background="@color/darkgrey"
            android:textSize="15sp"
            android:gravity="center_horizontal|center_vertical"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fri"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/thu"
            android:text="FRI"
            app:layout_constraintWidth_percent="0.14"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito"
            android:background="@color/darkgrey"
            android:textSize="15sp"
            android:gravity="center_horizontal|center_vertical"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/fri"
            android:text="SAT"
            app:layout_constraintWidth_percent="0.14"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito"
            android:background="@color/darkgrey"
            android:textSize="15sp"
            android:gravity="center_horizontal|center_vertical"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/sat"
            android:text="SUN"
            app:layout_constraintWidth_percent="0.14"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito"
            android:background="@color/darkgrey"
            android:textSize="15sp"
            android:gravity="center_horizontal|center_vertical"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/routine_recycler_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/date_picker_actions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent="0.75"
        android:paddingTop="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/edit_routine_btn"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.3"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="EDIT WORKOUT"
        android:fontFamily="@font/nunito"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/start_workout_btn"
        app:layout_constraintTop_toBottomOf="@id/routine_recycler_list_view" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_workout_btn"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.3"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="START WORKOUT"
        android:fontFamily="@font/nunito"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/edit_routine_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/routine_recycler_list_view" />

</androidx.constraintlayout.widget.ConstraintLayout>