<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Platform.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#0B7FE4</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="android:shadowColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.ButtonSecondary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="android:shadowColor">#FFFFFF</item>
    </style>

    <style name="RoutineItemTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/darkgrey</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
